@model List<ServiceRequestForm.Models.ServiceRequest>

@{
    ViewData["Title"] = "All Service Requests";
}


<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6 text-start">
            <form method="get" asp-action="Index" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary px-3"><i class="bi bi-arrow-left"></i> Back</button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <form method="get" asp-action="Grid" class="d-inline-flex align-items-center gap-2">
                <input type="text" name="search" value="@Context.Request.Query["search"]"
                       class="form-control border-primary" style="max-width:220px;" />
                <button type="submit" class="btn btn-primary px-3">Search</button>
            </form>
        </div>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr style="font-size:0.97rem;">
                            <th>ID</th>
                            <th>Title</th>
                            <th>Entity</th>
                            <th>Department</th>
                            <th># Personnel</th>
                            <th>Description</th>
                            <th>Start Date</th>
                            <th>Type</th>
                            <th>Location</th>
                            <th>Scheme</th>
                            <th>User Comment</th>
                            <th>Cost Centre</th>
                            <th>GL Account</th>
                            <th>Budget Owner</th>
                            <th>Job Impact</th>
                            <th>Validator Comment</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var form in Model)
                            {
                                var statusClass = form.Status switch
                                {
                                    "Approved" => "badge bg-success",
                                    "Sent To Validator" => "badge bg-info text-dark",
                                    "Returned To User" => "badge bg-warning text-dark",
                                    "Draft" => "badge bg-secondary",
                                    _ => "badge bg-light text-dark"
                                };
                                <tr style="transition:background 0.2s;">
                                    <td class="fw-bold">@form.Id</td>
                                    <td>@form.RequestTitle</td>
                                    <td>@form.Entity</td>
                                    <td>@form.Department</td>
                                    <td>@form.NumberOfPersonnel</td>
                                    <td>@form.ServiceDescription</td>
                                    <td>@form.ProposedServiceStartDate.ToString("yyyy-MM-dd")</td>
                                    <td>@form.PersonnelType</td>
                                    <td>@form.Location</td>
                                    <td>@form.ServiceScheme</td>
                                    <td>@form.User1Comment</td>
                                    <td>@form.CostCentre</td>
                                    <td>@form.GlAccount</td>
                                    <td>@form.BudgetOwner</td>
                                    <td>@form.JobImpact</td>
                                    <td>@form.User2Comment</td>
                                    <td><span class="@statusClass" style="font-size:0.95em;">@form.Status</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="17" class="text-center text-muted py-4">
                                    No matching service requests found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">




