@model List<ServiceRequestForm.Models.ServiceRequest>

@{
    ViewData["Title"] = "All Service Requests";
}

<div class="container-fluid">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <h2 class="mb-2">Service Request Grid</h2>

        <div class="d-flex gap-2 mb-2">
            <form method="get" asp-action="Grid" class="d-flex">
                <input type="text" name="search" value="@Context.Request.Query["search"]"
                       class="form-control me-2" placeholder="Search requests..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <form method="get" asp-action="Index" class="mb-0">
                <button type="submit" class="btn btn-secondary">Back to Dashboard</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Request Title</th>
                            <th>Entity</th>
                            <th>Department</th>
                            <th># of Personnel</th>
                            <th>Service Description</th>
                            <th>Proposed Start Date</th>
                            <th>Personnel Type</th>
                            <th>Location</th>
                            <th>Service Scheme</th>
                            <th>User Comment</th>
                            <th>Cost Centre</th>
                            <th>GL Account</th>
                            <th>Budget Owner</th>
                            <th>Job Impact</th>
                            <th>Validator Comment</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var form in Model)
                            {
                                <tr>
                                    <td>@form.Id</td>
                                    <td>@form.RequestTitle</td>
                                    <td>@form.Entity</td>
                                    <td>@form.Department</td>
                                    <td>@form.NumberOfPersonnel</td>
                                    <td>@form.ServiceDescription</td>
                                    <td>@form.ProposedServiceStartDate.ToString("yyyy-MM-dd")</td>
                                    <td>@form.PersonnelType</td>
                                    <td>@form.Location</td>
                                    <td>@form.ServiceScheme</td>
                                    <td>@form.User1Comment</td>
                                    <td>@form.CostCentre</td>
                                    <td>@form.GlAccount</td>
                                    <td>@form.BudgetOwner</td>
                                    <td>@form.JobImpact</td>
                                    <td>@form.User2Comment</td>
                                    <td>@form.Status</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="17" class="text-center text-muted">
                                    No matching service requests found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


