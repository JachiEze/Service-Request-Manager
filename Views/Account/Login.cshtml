@model ServiceRequestForm.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2 style="text-align:center; margin-bottom:20px;">Access your Account</h2>

<form asp-action="Login" method="post" style="max-width: 400px; margin: 0 auto;">
    <div style="margin-bottom: 15px;">
        <label asp-for="Username" style="display: block; margin-bottom: 5px;"></label>
        <input asp-for="Username" class="form-control" style="width: 100%; padding: 8px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div style="margin-bottom: 15px;">
        <label asp-for="Password" style="display: block; margin-bottom: 5px;"></label>
        <input asp-for="Password" type="password" class="form-control" style="width: 100%; padding: 8px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" style="padding: 10px 20px; width: 100%;">Login</button>

    <div style="text-align:center; margin-top:10px;">
        <a asp-action="SignUp" class="btn btn-secondary" style="padding: 8px 15px;">Sign Up</a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color:red; margin-top: 15px; text-align: center;">
            @Html.ValidationSummary()
        </div>
    }
</form>





